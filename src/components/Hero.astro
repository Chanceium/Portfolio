---
import { portfolio } from "../data/portfolio.js";
const { personal, social } = portfolio;
---

<section id="hero" class="relative min-h-[90vh] flex items-center justify-center overflow-hidden py-20 md:py-0">
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900/20 to-secondary-900/10 z-0"></div>
  
  <div class="container mx-auto px-4 z-10">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 items-center">
      <div class="lg:col-span-3 text-center lg:text-left" data-aos="fade-right">
        <p class="text-primary-600 font-medium mb-3 text-base md:text-lg">{personal.greeting}</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl mb-4 font-bold text-neutral-800">{personal.fullName}</h1>
        <h2 class="text-xl md:text-2xl lg:text-3xl text-neutral-700 mb-6">
          {personal.title}
        </h2>
        <p class="text-neutral-600 text-base md:text-lg mb-8 max-w-2xl mx-auto lg:mx-0">
          {personal.description}
        </p>
        
        <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
          <a href="#projects" class="bg-blue-900 hover:bg-black text-white font-medium py-2 px-6 rounded-md transition-colors inline-flex items-center">
            View My Work
            <i class="ri-arrow-right-line ml-2"></i>
          </a>
          <a href="#contact" class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white font-medium py-2 px-6 rounded-md transition-colors inline-flex items-center">
            Contact Me
            <i class="ri-mail-line ml-2"></i>
          </a>
        </div>
        
        <div class="mt-12 flex gap-6 justify-center lg:justify-start">
          <a href={social.github} target="_blank" rel="noopener noreferrer" class="text-neutral-700 hover:text-primary-600 transition-colors">
            <i class="ri-github-fill text-2xl"></i>
          </a>
          <a href={social.linkedin} target="_blank" rel="noopener noreferrer" class="text-neutral-700 hover:text-primary-600 transition-colors">
            <i class="ri-linkedin-box-fill text-2xl"></i>
          </a>
          <a href={social.twitter} target="_blank" rel="noopener noreferrer" class="text-neutral-700 hover:text-primary-600 transition-colors">
            <i class="ri-twitter-x-fill text-2xl"></i>
          </a>
          <a href={`mailto:${personal.email}`} class="text-neutral-700 hover:text-primary-600 transition-colors">
            <i class="ri-mail-fill text-2xl"></i>
          </a>
        </div>
      </div>
      
      <div class="lg:col-span-2 flex justify-center order-first lg:order-last relative" data-aos="fade-left">
        <div class="relative w-48 h-48 md:w-64 md:h-64 lg:w-80 lg:h-80">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-full opacity-20 animate-pulse"></div>
          <div class="absolute inset-4 bg-white rounded-full overflow-hidden shadow-xl border-4 border-white">
            <img 
              src={personal.image} 
              alt={personal.fullName} 
              class="w-full h-full object-cover"
            />
          </div>
          <div class="absolute -top-4 -right-4 bg-white p-4 rounded-full shadow-lg animate-float">
            <i class="ri-code-s-slash-line text-2xl text-primary-600"></i>
          </div>
          <div class="absolute -bottom-4 -left-4 bg-white p-4 rounded-full shadow-lg animate-float" style="animation-delay: 1s;">
            <i class="ri-terminal-box-line text-2xl text-secondary-600"></i>
          </div>
          <div class="absolute -bottom-2 -right-2 bg-white p-4 rounded-full shadow-lg animate-float" style="animation-delay: 2s;">
            <i class="ri-brain-line text-2xl text-accent-600"></i>
          </div>
        </div>
        <p class="absolute text-center w-full text-sm md:text-base font-medium text-neutral-600" style="top: calc(100% + 0.5rem);">{personal.tagline || "Creating innovative solutions with passion"}</p>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-8 left-0 right-0 flex justify-center items-center z-20 hidden md:flex">
    <a href="#experience" class="flex flex-col items-center text-neutral-600 hover:text-primary-600 transition-colors">
      <span class="text-sm mb-2">Scroll Down</span>
      <i class="ri-arrow-down-line text-xl animate-bounce"></i>
    </a>
  </div>
</section>